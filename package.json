{
  "name": "fblive2",
  "version": "1.0.0",
  "description": "Live football match tracking system with real-time updates",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "frontend": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install",
    "dev:all": "concurrently \"npm run dev\" \"npm run frontend\""
  },
  "keywords": ["football", "live", "tracking", "matches", "api"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
